@model I_Car_Services.Models.Customer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center">Customer Registration</h3>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Role" value="Customer" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name*</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email*</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordHash" class="form-label">Password*</label>
                            <input asp-for="PasswordHash" type="password" class="form-control" required />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number*</label>
                            <input asp-for="PhoneNumber" class="form-control" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Register as Customer</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" class="text-success">Already registered? Login here</a>
                </div>
            </div>
        </div>
    </di
