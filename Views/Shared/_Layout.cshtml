@{
    var userRole = Context.Session.GetString("UserRole");
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>I_Car_Services</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">I_Car_Services</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">

                    @if (string.IsNullOrEmpty(userRole))
                    {
                        <!-- Guest View -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Register">Customer Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Login">Customer Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiceCenter" asp-action="Register">Service Center Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiceCenter" asp-action="Login">Service Center Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin Login</a>
                        </li>
                    }
                    else if (userRole == "Admin")
                    {
                        <!-- Admin View -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else if (userRole == "Customer")
                    {
                        <!-- Customer View -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else if (userRole == "ServiceCenter")
                    {
                        <!-- Service Center View -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiceCenter" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
